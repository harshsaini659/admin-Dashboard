<%- include('../partials/header', { title: title }) %>
<%- include('../partials/sidebar', { currentPage: 'categories' }) %>
        <main class="main-wrap">
            <%- include('../partials/navbar') %>
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title"><%= title %></h2>
                        <p>Update category information</p>
                    </div>
                    <div>
                        <a href="/admin/user/categories" class="btn btn-light">
                            <i class="material-icons md-arrow_back"></i> Back to Categories
                        </a>
                    </div>
                </div>
                
                <!-- Error Message -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                <form method="POST" action="/admin/user/categories/edit/<%= category._id %>">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="categoryName" class="form-label">Category Name <span class="text-danger">*</span></label>
                                                <input type="text" class="form-control" id="categoryName" name="name" value="<%= category.name %>" required maxlength="50" placeholder="Enter category name">
                                                <div class="form-text">Maximum 50 characters</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="categoryStatus" class="form-label">Status</label>
                                                <select class="form-select" id="categoryStatus" name="status">
                                                    <option value="active" <%= category.status === 'active' ? 'selected' : '' %>>Active</option>
                                                    <option value="inactive" <%= category.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <% if (categoryTree && categoryTree.length > 0) { %>
                                        <div class="mb-3">
                                            <label for="categoryParent" class="form-label">Parent Category</label>
                                            <div class="tree-select-container">
                                                <select class="form-control tree-select" id="categoryParent" name="parent">
                                                    <option value="" <%= !category.parent ? 'selected' : '' %>>üè† Root Category</option>
                                                    <% 
                                                    const currentParentId = category.parent ? category.parent._id.toString() : null;
                                                    categoryTree.forEach(item => { 
                                                        const isSelected = currentParentId === item._id.toString() ? 'selected' : '';
                                                    %>
                                                        <option value="<%= item._id %>" data-level="<%= item.level %>" <%= isSelected %>>
                                                            <%= item.displayName %>
                                                        </option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                            <div class="form-text">Select a parent category or leave empty for root category</div>
                                        </div>
                                    <% } %>

                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="material-icons md-save"></i> Update Category
                                        </button>
                                        <a href="/admin/user/categories" class="btn btn-light">Cancel</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title">Category Info</h6>
                            </div>
                            <div class="card-body">
                                <p><strong>Created:</strong> <%= new Date(category.createdAt).toLocaleDateString() %></p>
                                <% if (category.updatedAt && category.updatedAt !== category.createdAt) { %>
                                    <p><strong>Last Updated:</strong> <%= new Date(category.updatedAt).toLocaleDateString() %></p>
                                <% } %>
                                <% if (category.parent) { %>
                                    <p><strong>Current Parent:</strong> <%= category.parent.name %></p>
                                <% } else { %>
                                    <p><strong>Type:</strong> Root Category</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <%- include('../partials/footer') %>
        </main>
        
        <style>
            /* Tree Select Styling for Backend-Generated Structure */
            .tree-select-container {
                position: relative;
                width: 100%;
            }
            
            .tree-select {
                width: 100%;
                padding: 10px 12px;
                border: 1px solid #ced4da;
                border-radius: 0.375rem;
                background-color: #fff;
                font-size: 14px;
                line-height: 1.5;
                transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
            }
            
            .tree-select:focus {
                border-color: #86b7fe;
                outline: 0;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }
            
            .tree-select option {
                padding: 8px 12px;
                font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
                line-height: 1.4;
            }
            
            .tree-select option[data-level="0"] {
                font-weight: 600;
                color: #2c3e50;
            }
            
            .tree-select option[data-level="1"] {
                color: #34495e;
                font-weight: 500;
            }
            
            .tree-select option[data-level="2"] {
                color: #5d6d7e;
            }
            
            .tree-select option[data-level="3"] {
                color: #717d8a;
            }
            
            /* Custom styling for better visual hierarchy */
            .form-label {
                font-weight: 600;
                color: #2c3e50;
                margin-bottom: 8px;
            }
            
            .form-text {
                font-size: 0.875rem;
                color: #6c757d;
                margin-top: 5px;
            }
        </style>
    </body>
</html>