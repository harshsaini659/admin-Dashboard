            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title"><%= title %></h2>
                        <p>Update category information</p>
                    </div>
                    <div>
                        <a href="/admin/user/categories" class="btn btn-light">
                            <i class="material-icons md-arrow_back"></i> Back to Categories
                        </a>
                    </div>
                </div>
                
                <!-- Error Message -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                <form method="POST" action="/admin/user/categories/edit/<%= category._id %>">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="categoryName" class="form-label">Category Name <span class="text-danger">*</span></label>
                                                <input type="text" class="form-control" id="categoryName" name="name" value="<%= category.name %>" required maxlength="50" placeholder="Enter category name">
                                                <div class="form-text">Maximum 50 characters</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="categoryStatus" class="form-label">Status</label>
                                                <select class="form-select" id="categoryStatus" name="status">
                                                    <option value="active" <%= category.status === 'active' ? 'selected' : '' %>>Active</option>
                                                    <option value="inactive" <%= category.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="categoryDescription" class="form-label">Description</label>
                                        <textarea class="form-control" id="categoryDescription" name="description" rows="4" maxlength="200" placeholder="Enter category description (optional)"><%= category.description || '' %></textarea>
                                        <div class="form-text">Maximum 200 characters</div>
                                    </div>

                                    <% if (parentCategories && parentCategories.length > 0) { %>
                                        <div class="mb-3">
                                            <label for="categoryParent" class="form-label">Parent Category</label>
                                            <select class="form-select" id="categoryParent" name="parent">
                                                <option value="">-- Root Category --</option>
                                                <% 
                                                // Helper function to build hierarchical structure
                                                const buildHierarchy = (categories, parentId = null, prefix = '') => {
                                                    return categories
                                                        .filter(cat => {
                                                            if (parentId === null) {
                                                                return !cat.parent
                                                            }
                                                            return cat.parent && cat.parent._id && cat.parent._id.toString() === parentId.toString()
                                                        })
                                                        .map(cat => {
                                                            const item = {
                                                                _id: cat._id,
                                                                name: prefix + cat.name,
                                                                children: buildHierarchy(categories, cat._id, prefix + '    ')
                                                            }
                                                            return [item, ...item.children]
                                                        })
                                                        .flat()
                                                }
                                                
                                                const hierarchicalCategories = buildHierarchy(parentCategories)
                                                const currentParentId = category.parent ? category.parent._id : null
                                                
                                                hierarchicalCategories.forEach(cat => {
                                                    const selected = currentParentId && currentParentId.toString() === cat._id.toString() ? 'selected' : ''
                                                %>
                                                    <option value="<%= cat._id %>" <%= selected %>><%= cat.name %></option>
                                                <% }) %>
                                            </select>
                                            <div class="form-text">Select a parent category or leave empty for root category</div>
                                        </div>
                                    <% } %>

                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="material-icons md-save"></i> Update Category
                                        </button>
                                        <a href="/admin/user/categories" class="btn btn-light">Cancel</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title">Category Info</h6>
                            </div>
                            <div class="card-body">
                                <p><strong>Created:</strong> <%= new Date(category.createdAt).toLocaleDateString() %></p>
                                <% if (category.updatedAt && category.updatedAt !== category.createdAt) { %>
                                    <p><strong>Last Updated:</strong> <%= new Date(category.updatedAt).toLocaleDateString() %></p>
                                <% } %>
                                <% if (category.parent) { %>
                                    <p><strong>Current Parent:</strong> <%= category.parent.name %></p>
                                <% } else { %>
                                    <p><strong>Type:</strong> Root Category</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
