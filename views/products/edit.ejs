        <script>
            // Available variants and existing data from server
            const availableVariants = <%- JSON.stringify(variants) %>;
            const existingProduct = <%- JSON.stringify(product) %>;
            let variantCounter = 0;
            let imageCounter = 0;
            
            // Calculate final price
            function calculateFinalPrice() {
                const price = parseFloat(document.getElementById('productPrice').value) || 0;
                const discount = parseFloat(document.getElementById('productDiscount').value) || 0;
                const finalPrice = price - (price * (discount / 100));
                document.getElementById('finalPrice').textContent = finalPrice.toFixed(2);
                return finalPrice;
            }
            
            // Update summary
            function updateSummary() {
                // Category
                const categorySelect = document.getElementById('productCategory');
                const categoryText = categorySelect.selectedOptions[0]?.text || 'Not selected';
                document.getElementById('summaryCategory').textContent = categoryText;
                
                // Price
                const finalPrice = calculateFinalPrice();
                document.getElementById('summaryPrice').textContent = `$${finalPrice.toFixed(2)}`;
                
                // Stock
                const stock = document.getElementById('productStock').value || 0;
                document.getElementById('summaryStock').textContent = `${stock} units`;
                
                // Variants
                const variantCount = document.querySelectorAll('.variant-item').length;
                document.getElementById('summaryVariants').textContent = `${variantCount} variants`;
                
                // Images
                const imageCount = document.querySelectorAll('.image-item').length;
                document.getElementById('summaryImages').textContent = `${imageCount} images`;
            }
            
            // Load existing variants
            function loadExistingVariants() {
                if (existingProduct.variants && existingProduct.variants.length > 0) {
                    existingProduct.variants.forEach(productVariant => {
                        variantCounter++;
                        const container = document.getElementById('variantsContainer');
                        
                        const variantHtml = `
                            <div class="variant-item border rounded p-3 mb-3" data-variant-id="${variantCounter}">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="mb-0">Variant ${variantCounter}</h6>
                                    <button type="button" class="btn btn-sm btn-danger" onclick="removeVariant(${variantCounter})">
                                        <i class="material-icons md-delete"></i>
                                    </button>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-label">Variant Type</label>
                                        <select class="form-select variant-select" onchange="loadVariantValues(${variantCounter})">
                                            <option value="">Select Variant</option>
                                            ${availableVariants.map(variant => 
                                                `<option value="${variant._id}" ${variant._id === productVariant.variant._id ? 'selected' : ''}>${variant.name}</option>`
                                            ).join('')}
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Available Values</label>
                                        <div class="variant-values" id="variantValues_${variantCounter}">
                                            <!-- Values will be loaded -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                        
                        container.insertAdjacentHTML('beforeend', variantHtml);
                        
                        // Load values for this variant
                        setTimeout(() => {
                            loadVariantValues(variantCounter, productVariant.selectedValues);
                        }, 100);
                    });
                }
            }
            
            // Load existing images
            function loadExistingImages() {
                if (existingProduct.images && existingProduct.images.length > 0) {
                    const container = document.getElementById('imagesContainer');
                    
                    existingProduct.images.forEach(imageUrl => {
                        imageCounter++;
                        const imageHtml = `
                            <div class="image-item d-flex gap-2 mb-2" data-image-id="${imageCounter}">
                                <input type="url" class="form-control" value="${imageUrl}" onchange="updateSummary()">
                                <button type="button" class="btn btn-danger btn-sm" onclick="removeImage(${imageCounter})">
                                    <i class="material-icons md-delete"></i>
                                </button>
                            </div>
                        `;
                        container.insertAdjacentHTML('beforeend', imageHtml);
                    });
                }
                
                // Add placeholder if no images
                if (imageCounter === 0) {
                    document.getElementById('imagesContainer').innerHTML = '<p class="text-muted">No images added yet. Click "Add Image URL" to get started.</p>';
                }
            }
            
            // Add variant
            function addVariant() {
                variantCounter++;
                const container = document.getElementById('variantsContainer');
                
                if (container.querySelector('p.text-muted')) {
                    container.innerHTML = '';
                }
                
                const variantHtml = `
                    <div class="variant-item border rounded p-3 mb-3" data-variant-id="${variantCounter}">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="mb-0">Variant ${variantCounter}</h6>
                            <button type="button" class="btn btn-sm btn-danger" onclick="removeVariant(${variantCounter})">
                                <i class="material-icons md-delete"></i>
                            </button>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Variant Type</label>
                                <select class="form-select variant-select" onchange="loadVariantValues(${variantCounter})">
                                    <option value="">Select Variant</option>
                                    ${availableVariants.map(variant => 
                                        `<option value="${variant._id}">${variant.name}</option>`
                                    ).join('')}
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Available Values</label>
                                <div class="variant-values" id="variantValues_${variantCounter}">
                                    <p class="text-muted small">Select a variant type first</p>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                container.insertAdjacentHTML('beforeend', variantHtml);
                updateSummary();
            }
            
            // Load variant values
            function loadVariantValues(variantId, selectedValues = []) {
                const variantSelect = document.querySelector(`[data-variant-id="${variantId}"] .variant-select`);
                const selectedVariantId = variantSelect.value;
                const valuesContainer = document.getElementById(`variantValues_${variantId}`);
                
                if (!selectedVariantId) {
                    valuesContainer.innerHTML = '<p class="text-muted small">Select a variant type first</p>';
                    return;
                }
                
                const selectedVariant = availableVariants.find(v => v._id === selectedVariantId);
                if (selectedVariant && selectedVariant.value) {
                    const valuesHtml = selectedVariant.value.map(value => `
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="${value}" 
                                   id="value_${variantId}_${value}" 
                                   ${selectedValues.includes(value) ? 'checked' : ''}>
                            <label class="form-check-label" for="value_${variantId}_${value}">
                                ${value}
                            </label>
                        </div>
                    `).join('');
                    
                    valuesContainer.innerHTML = valuesHtml;
                } else {
                    valuesContainer.innerHTML = '<p class="text-muted small">No values available</p>';
                }
            }
            
            // Remove variant
            function removeVariant(variantId) {
                document.querySelector(`[data-variant-id="${variantId}"]`).remove();
                
                // Check if no variants left
                const container = document.getElementById('variantsContainer');
                if (container.children.length === 0) {
                    container.innerHTML = '<p class="text-muted">No variants added yet. Click "Add Variant" to get started.</p>';
                }
                updateSummary();
            }
            
            // Add image URL
            function addImageUrl() {
                imageCounter++;
                const container = document.getElementById('imagesContainer');
                
                if (container.querySelector('p.text-muted')) {
                    container.innerHTML = '';
                }
                
                const imageHtml = `
                    <div class="image-item d-flex gap-2 mb-2" data-image-id="${imageCounter}">
                        <input type="url" class="form-control" placeholder="Enter image URL" onchange="updateSummary()">
                        <button type="button" class="btn btn-danger btn-sm" onclick="removeImage(${imageCounter})">
                            <i class="material-icons md-delete"></i>
                        </button>
                    </div>
                `;
                
                container.insertAdjacentHTML('beforeend', imageHtml);
                updateSummary();
            }
            
            // Remove image
            function removeImage(imageId) {
                document.querySelector(`[data-image-id="${imageId}"]`).remove();
                
                // Check if no images left
                const container = document.getElementById('imagesContainer');
                if (container.children.length === 0) {
                    container.innerHTML = '<p class="text-muted">No images added yet. Click "Add Image URL" to get started.</p>';
                }
                updateSummary();
            }
            
            // Update product
            function updateProduct() {
                const formData = collectFormData();
                formData.active = document.getElementById('productStatus').value === 'true';
                submitProductUpdate(formData);
            }
            
            // Save as draft
            function saveDraft() {
                const formData = collectFormData();
                formData.active = false;
                submitProductUpdate(formData);
            }
            
            // Collect form data
            function collectFormData() {
                const form = document.getElementById('productForm');
                const formData = new FormData(form);
                
                const data = {
                    name: formData.get('name'),
                    description: formData.get('description'),
                    category: formData.get('category'),
                    price: parseFloat(formData.get('price')),
                    discount: parseFloat(formData.get('discount')) || 0,
                    stock: parseInt(formData.get('stock')),
                    active: formData.get('active') === 'true'
                };
                
                // Collect variants
                const variants = [];
                document.querySelectorAll('.variant-item').forEach(variantItem => {
                    const variantSelect = variantItem.querySelector('.variant-select');
                    const selectedValues = [];
                    
                    variantItem.querySelectorAll('.variant-values input:checked').forEach(checkbox => {
                        selectedValues.push(checkbox.value);
                    });
                    
                    if (variantSelect.value && selectedValues.length > 0) {
                        variants.push({
                            variant: variantSelect.value,
                            selectedValues: selectedValues
                        });
                    }
                });
                data.variants = variants;
                
                // Collect images
                const images = [];
                document.querySelectorAll('.image-item input').forEach(input => {
                    if (input.value.trim()) {
                        images.push(input.value.trim());
                    }
                });
                data.images = images;
                
                return data;
            }
            
            // Submit product update
            function submitProductUpdate(data) {
                const productId = document.getElementById('productId').value;
                
                fetch(`/admin/user/api/products/${productId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(result => {
                    if (result.message) {
                        window.location.href = '/admin/user/products?success=' + encodeURIComponent(result.message);
                    } else {
                        throw new Error(result.message || 'Unknown error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error updating product: ' + error.message);
                });
            }
            
            // Event listeners
            document.addEventListener('DOMContentLoaded', function() {
                // Load existing data
                loadExistingVariants();
                loadExistingImages();
                
                // Update summary on form changes
                document.getElementById('productForm').addEventListener('input', updateSummary);
                
                // Initial summary update
                updateSummary();
                
                // Auto-dismiss alerts
                const alerts = document.querySelectorAll('.alert.alert-dismissible');
                alerts.forEach(function(alert) {
                    setTimeout(function() {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }, 5000);
                });
            });
        </script>
    </body>
</html>
