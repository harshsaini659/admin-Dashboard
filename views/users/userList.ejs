<%- include('../partials/header', { title: title }) %>
<style>
    .online-indicator {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background-color: #28a745;
        display: inline-block;
        animation: blink 1.5s infinite;
    }
    
    @keyframes blink {
        0%, 50% {
            opacity: 1;
        }
        51%, 100% {
            opacity: 0.3;
        }
    }
</style>
<%- include('../partials/sidebar', { currentPage: 'users' }) %>
<main class="main-wrap">
    <%- include('../partials/navbar') %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title"><%= title %></h2>
                <!-- <p>Manage your customers</p> -->
            </div>
        </div>
        
        <!-- Success Message --> 
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <!-- Error Message -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        <div class="card mb-4">
            <div class="card-body">
                <% if (users && users.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Role</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((user, index) => { %>
                                    <tr>
                                        <th scope="row"><%= ((currentPage || 1) - 1) * 10 + index + 1 %></th>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div>
                                                    <strong><%= user.name %></strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <%= user.email %>
                                        </td>
                                        <td>
                                            <%= user.role %>
                                        </td>
                                        <td>
                                            <% if (user.isLoggedIn) { %>
                                                <div class="d-flex align-items-center">
                                                    <span class="online-indicator"></span>
                                                    <span class="ms-2 text-success">Online</span>
                                                </div>
                                            <% } else { %>
                                                <div class="text-muted">
                                                    <small>Last login:</small><br>
                                                    <% if (user.lastLogin) { %>
                                                        <%= new Date(user.lastLogin).toLocaleString() %>
                                                    <% } else { %>
                                                        Never logged in
                                                    <% } %>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                    <button class="btn btn-light btn-sm " type="button" id="actionMenu<%= user._id %>" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="material-icons">+</i>
                                                    </button>
                                                    <ul class="dropdown-menu" aria-labelledby="actionMenu<%= user._id %>">
                                                    <!-- View option (disabled) -->
                                                    <li>
                                                        <span class="dropdown-item text-muted" style="cursor: not-allowed;">
                                                        <i class="material-icons md-visibility me-1"></i> View
                                                        </span>
                                                    </li>
                                                    <!-- Edit option (disabled) -->
                                                    <li>
                                                        <span class="dropdown-item text-muted" style="cursor: not-allowed;">
                                                        <i class="material-icons md-edit me-1"></i> Edit
                                                        </span>
                                                    </li>
                                                    <!-- Delete option (disabled) -->
                                                    <li>
                                                        <span class="dropdown-item text-muted" style="cursor: not-allowed;">
                                                        <i class="material-icons md-delete me-1"></i> Delete
                                                        </span>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <p class="text-muted">No users found.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>    
    <%- include('../partials/footer') %>
</main>

