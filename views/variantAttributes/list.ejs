<%- include('../partials/header', { title: title }) %>
<%- include('../partials/sidebar', { currentPage: 'variant-attributes' }) %>
        <main class="main-wrap">
            <%- include('../partials/navbar') %>
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title"><%= title %></h2>
                        <p>Manage product variant attributes like size, color, material values</p>
                    </div>
                    <div>
                        <a href="/admin/user/variantAtt/create" class="btn btn-primary">
                            <i class="material-icons md-add"></i> Add Product Variant Attribute
                        </a>
                    </div>
                </div>
                
                <!-- Success Message -->
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <!-- Error Message -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <% if (variants && variants.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Attribute Name</th>
                                            <th scope="col">Product Variant</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Created</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% variants.forEach((variant, index) => { %>
                                            <tr>
                                                <th scope="row"><%= index + 1 %></th>
                                                <td>
                                                    <strong><%= variant.name %></strong>
                                                </td>
                                                <td>
                                                    <%= variant.variantName ? variant.variantName.name : 'N/A' %>
                                                </td>
                                                <td>
                                                    <% if (variant.status === 'active') { %>
                                                        <span class="badge bg-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">Inactive</span>
                                                    <% } %>
                                                </td>
                                                <td><%= new Date(variant.createdAt).toLocaleDateString() %></td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a href="/admin/user/variantAtt/edit/<%= variant._id %>" class="btn btn-light btn-sm" title="Edit Variant Attribute">
                                                            <i class="material-icons md-edit"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-light btn-sm text-danger" onclick="deleteVariant('<%= variant._id %>', '<%= variant.name %>')" title="Delete Variant Attribute">
                                                            <i class="material-icons md-delete"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="material-icons md-tune" style="font-size: 4rem; color: #ddd;"></i>
                                <h4 class="mt-3 text-muted">No Product Variant Attributes Found</h4>
                                <p class="text-muted">Start by creating your first product variant attribute like size, color, or material.</p>
                                <a href="/admin/user/variantAtt/create" class="btn btn-primary">
                                    <i class="material-icons md-add"></i> Add Product Variant Attribute
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </section>
            <%- include('../partials/footer') %>
        </main>
        
        <script>
            function deleteVariant(id, name) {
                if (confirm(`Are you sure you want to delete the variant attribute "${name}"?`)) {
                    // Create a form to submit DELETE request via API
                    fetch(`/admin/user/variantAtt/delete/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.message.includes('successfully')) {
                            window.location.reload();
                        } else {
                            alert('Error deleting variant attribute: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Error deleting variant attribute');
                    });
                }
            }
            
            // Auto-dismiss alerts after 5 seconds
            document.addEventListener('DOMContentLoaded', function() {
                const alerts = document.querySelectorAll('.alert.alert-dismissible');
                
                alerts.forEach(function(alert) {
                    setTimeout(function() {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }, 5000);
                });
            });
        </script>
