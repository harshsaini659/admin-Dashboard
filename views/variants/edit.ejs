            </header>
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title"><%= title %></h2>
                        <p>Update variant information</p>
                    </div>
                    <div>
                        <a href="/admin/user/variants" class="btn btn-light">
                            <i class="material-icons md-arrow_back"></i> Back to Variants
                        </a>
                    </div>
                </div>
                
                <!-- Error Message -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                <form id="variantForm">
                                    <div class="mb-3">
                                        <label for="variantName" class="form-label">Variant Name <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="variantName" name="name" value="<%= variant.name %>" required maxlength="50" placeholder="e.g., Size, Color, Material">
                                        <div class="form-text">Choose a descriptive name for your variant type</div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Variant Values <span class="text-danger">*</span></label>
                                        <div id="valuesList">
                                            <% if (variant.value && variant.value.length > 0) { %>
                                                <% variant.value.forEach((val, index) => { %>
                                                    <div class="input-group mb-2">
                                                        <input type="text" class="form-control" name="value" value="<%= val %>" placeholder="Enter variant value" required>
                                                        <button type="button" class="btn btn-outline-danger" onclick="removeValue(this)" <%= variant.value.length === 1 ? 'disabled' : '' %>>
                                                            <i class="material-icons md-remove"></i>
                                                        </button>
                                                    </div>
                                                <% }) %>
                                            <% } else { %>
                                                <div class="input-group mb-2">
                                                    <input type="text" class="form-control" name="value" placeholder="Enter variant value" required>
                                                    <button type="button" class="btn btn-outline-danger" onclick="removeValue(this)" disabled>
                                                        <i class="material-icons md-remove"></i>
                                                    </button>
                                                </div>
                                            <% } %>
                                        </div>
                                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="addValue()">
                                            <i class="material-icons md-add"></i> Add Another Value
                                        </button>
                                        <div class="form-text">Add all possible values for this variant</div>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="material-icons md-save"></i> Update Variant
                                        </button>
                                        <a href="/admin/user/variants" class="btn btn-light">Cancel</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title">Variant Info</h6>
                            </div>
                            <div class="card-body">
                                <p><strong>Created:</strong> <%= new Date(variant.createdAt).toLocaleDateString() %></p>
                                <% if (variant.updatedAt && variant.updatedAt !== variant.createdAt) { %>
                                    <p><strong>Last Updated:</strong> <%= new Date(variant.updatedAt).toLocaleDateString() %></p>
                                <% } %>
                                <p><strong>Total Values:</strong> <%= variant.value ? variant.value.length : 0 %></p>
                            </div>
                        </div>
                        
                        <div class="card mt-3">
                            <div class="card-header">
                                <h6 class="card-title">Current Values</h6>
                            </div>
                            <div class="card-body">
                                <% if (variant.value && variant.value.length > 0) { %>
                                    <% variant.value.forEach(val => { %>
                                        <span class="badge badge-soft-primary me-1 mb-1"><%= val %></span>
                                    <% }) %>
                                <% } else { %>
                                    <p class="text-muted small">No values added yet</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
