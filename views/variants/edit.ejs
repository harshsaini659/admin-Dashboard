<%- include('../partials/header', { title: title }) %>
<%- include('../partials/sidebar', { currentPage: 'variants' }) %>
        <main class="main-wrap">
            <%- include('../partials/navbar') %>
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title"><%= title %></h2>
                        <p>Update variant information</p>
                    </div>
                    <div>
                        <a href="/admin/user/variants" class="btn btn-light">
                            <i class="material-icons md-arrow_back"></i> Back to Variants
                        </a>
                    </div>
                </div>
                
                <!-- Error Message -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                <form id="variantForm">
                                    <div class="mb-3">
                                        <label for="variantName" class="form-label">Variant Name <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="variantName" name="name" value="<%= variant.name %>" required maxlength="50" placeholder="e.g., Size, Color, Material">
                                        <div class="form-text">Choose a descriptive name for your variant type</div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="variantStatus" class="form-label">Status</label>
                                        <select class="form-select" id="variantStatus" name="status">
                                            <option value="active" <%= variant.status === 'active' ? 'selected' : '' %>>Active</option>
                                            <option value="inactive" <%= variant.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                        </select>
                                        <div class="form-text">Set the variant availability status</div>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="material-icons md-save"></i> Update Variant
                                        </button>
                                        <a href="/admin/user/variants" class="btn btn-light">Cancel</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title">Variant Info</h6>
                            </div>
                            <div class="card-body">
                                <p><strong>Created:</strong> <%= new Date(variant.createdAt).toLocaleDateString() %></p>
                                <% if (variant.updatedAt && variant.updatedAt !== variant.createdAt) { %>
                                    <p><strong>Last Updated:</strong> <%= new Date(variant.updatedAt).toLocaleDateString() %></p>
                                <% } %>
                                <p><strong>Current Status:</strong> 
                                    <% if (variant.status === 'active') { %>
                                        <span class="badge bg-success">Active</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">Inactive</span>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <%- include('../partials/footer') %>
        </main>
        
        <script>
            // Handle form submission
            document.getElementById('variantForm').addEventListener('submit', function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const name = formData.get('name');
                const status = formData.get('status');
                
                if (!name || name.trim() === '') {
                    alert('Please provide variant name');
                    return;
                }

                // Submit via API
                fetch('/admin/user/variants/edit/<%= variant._id %>', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        name: name.trim(),
                        status: status || 'active'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.message && data.message.includes('successfully')) {
                        window.location.href = '/admin/user/variants?success=' + encodeURIComponent(data.message);
                    } else {
                        alert('Error: ' + (data.message || 'Unknown error'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error updating variant');
                });
            });
            
            // Auto-dismiss alerts after 5 seconds
            document.addEventListener('DOMContentLoaded', function() {
                const alerts = document.querySelectorAll('.alert.alert-dismissible');
                
                alerts.forEach(function(alert) {
                    setTimeout(function() {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }, 5000);
                });
            });
        </script>
